<Page x:Class="FitnessProj.LogBook"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FitnessProj"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LogBook">

    <Grid>
        <DataGrid x:Name="fitnessDataGrid" AutoGenerateColumns="False" HorizontalAlignment="Center" Height="430" VerticalAlignment="Center" Width="245" SelectionChanged="FitnessDataGrid_SelectionChanged" Margin="70,10,485,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="fitness name" Binding="{Binding name}"/>
                <DataGridTextColumn Header="fitness type" Binding="{Binding unitName}"/>
                <DataGridTextColumn Header="number of units" Binding="{Binding numberOfUnits}"/>
            </DataGrid.Columns>
        </DataGrid>
        <Button x:Name="updateButton" Content="Update Button" HorizontalAlignment="Left" Margin="665,375,0,0" VerticalAlignment="Top" Width="93" Height="46" Click="UpdateButton_Click"/>
    </Grid>
</Page>
